@model IEnumerable<BnGClub.Models.Announcement>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.annMessage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.annDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaderID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.annMessage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.annDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leader.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activities.actName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
