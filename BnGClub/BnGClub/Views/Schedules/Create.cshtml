@model BnGClub.Models.Schedules

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Schedules</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="startTime" class="control-label"></label>
                <input type="time" asp-for="startTime" class="form-control" />
                <span asp-validation-for="startTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endTime" class="control-label"></label>
                <input type="time" asp-for="endTime" class="form-control" />
                <span asp-validation-for="endTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateAct" class="control-label"></label>
                <input type="date" asp-for="dateAct" class="form-control" />
                <span asp-validation-for="dateAct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActID" class="control-label"></label>
                <select asp-for="ActID" class="form-control" asp-items="ViewBag.ActID">
                    <option selected="selected" disabled="disabled">Select an Activity...</option>
                </select>
                <span asp-validation-for="ActID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

